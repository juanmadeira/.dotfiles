#!/bin/bash

# script para exibir os pacotes instalados em ordem cronol√≥gica

# esperar 1 segundo e limpar a tela
sleep 1
clear

# exibir "Pacotes por data" usando figlet
printf '\e[1;96m'; figlet "Pacotes por data"
echo

for i in $(pacman -Qq)
do
    grep "\[ALPM\] installed $i" /var/log/pacman.log
done | \
    sort -u | \
    sed -e 's/\[ALPM\] installed //' -e 's/(.*$//'
bash

